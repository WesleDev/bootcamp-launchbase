{% extends "layout.njk" %}
{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}
{% block links %}
    <a href="/sobre">Sobre</a>
    <a href="/receitas" class="nav-receitas">Receitas</a>
{% endblock %}
{% block content %}
    <div class="receitas">
        <div class="pratos">
            {% for item in items %}
                <div class="prato prato-cursor">
                    <img src="/img/{{ item. image }}" alt="{{ item.title }}">
                    <p class="prato-titulo">{{ item.title }}</p>
                    <p class="prato-chef">por {{ item.author }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
    <script src="/script.js"></script>
{% endblock %}