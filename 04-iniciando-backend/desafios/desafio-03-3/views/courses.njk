{% extends "layout.njk" %}

{% block head %}
    <title>Rocketseat - Cursos</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="conteudo">
        <h1>Conte√∫dos</h1>
        <section class="cursos">
            {% for item in items %}
                <div class="curso" id="{{ item.id }}">
                    <div class="curso-img">
                        <img src="/img/{{ item.img }}" alt="">
                    </div>
                    <div class="curso-titulo">
                        <p>{{ item.titulo }}</p>
                    </div>
                    <div class="curso-info">
                        <p>{{ item.modulos }}</p>
                        <p>{{ item.preco }}</p>
                    </div>
                </div>
            {% endfor %}
        </section>
    </div>
    <script src="/scripts.js"></script>
{% endblock %}