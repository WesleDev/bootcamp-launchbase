{% extends "layout-website.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block links %}
    <a href="/website/sobre">Sobre</a>
    <a href="/website/receitas" class="negrito-destaque-link">Receitas</a>
    <a href="/website/chefs">Chefs</a>
    <div class="search-recipes">
        <form action="/website/search" method="GET">
            <input type="text" name="filter" placeholder="Buscar uma receita" value="{{ filter }}">
            <button type="submit">Buscar</button>
        </form>
    </div>
{% endblock %}

{% block content %}
    <div class="receitas">
        <div class="pratos">
            {% for recipe in recipes %}
                <div class="prato prato-cursor">
                    <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                    <p class="prato-titulo">{{ recipe.title }}</p>
                    <p class="prato-chef">por {{ recipe.chef_name }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
    <script src="/js/script.js"></script>
{% endblock %}