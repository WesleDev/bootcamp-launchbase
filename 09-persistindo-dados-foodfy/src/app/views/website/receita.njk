{% extends "layout-website.njk" %}

{% block head %}
    <title>Foodfy -
        {{ recipe.title }}</title>
{% endblock %}

{% block links %}
    <a href="/website/sobre">Sobre</a>
    <a href="/website/receitas" class="negrito-destaque-link">Receitas</a>
    <a href="/website/chefs">Chefs</a>
    <div class="search-recipes">
        <form action="/website/search" method="GET">
            <input type="text" name="filter" placeholder="Buscar uma receita" value="{{ filter }}">
            <button type="submit">Buscar</button>
        </form>
    </div>
{% endblock %}

{% block content %}
    <div class="detalhes-receita-header">
        <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
        <h1>{{ recipe.title }}</h1>
        <p>por {{ recipe.chef_name }}</p>
    </div>
    <div class="detalhes-receita-corpo">
        <div class="detalhes-receita">
            <div class="detalhes-receita-titulo">
                <h3>Ingredientes</h3>
                <h4 class="botao-esconder">Esconder</h4>
            </div>
            <ul class="conteudo0">
                {% for linha in recipe.ingredients %}
                    <li>{{linha}}</li>
                {% endfor %}
            </ul>
        </div>
        <div class="detalhes-receita">
            <div class="detalhes-receita-titulo">
                <h3>Modo de preparo</h3>
                <h4 class="botao-esconder">Esconder</h4>
            </div>
            <ol class="conteudo1">
                {% for linha in recipe.preparation %}
                    <li>{{linha}}</li>
                {% endfor %}
            </ol>
        </div>
        <div class="detalhes-receita">
            <div class="detalhes-receita-titulo">
                <h3>Informações adicionais</h3>
                <h4 class="botao-esconder">Esconder</h4>
            </div>
            <p class="conteudo2">{{recipe.information}}</p>
        </div>
    </div>
    <script src="/js/script.js"></script>
{% endblock %}