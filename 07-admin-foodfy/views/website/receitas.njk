{% endblock %}

{% block content %}
    <div class="receitas">
        <div class="pratos">
            {% for recipe in recipes %}
                <div class="prato prato-cursor">
                    <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                    <p class="prato-titulo">{{ recipe.title }}</p>
                    <p class="prato-chef">por {{ recipe.author }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
    <script src="/script.js"></script>
{% endblock %}